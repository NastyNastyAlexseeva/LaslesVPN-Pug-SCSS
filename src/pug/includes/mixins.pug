mixin list ( header__list )
    ul.header__list
        each header__link in header__list 
            li.header__link
                a(href=header__link.href)=header__link.text


mixin statistic(svg, num, name)
    - var svgName = svg;
    .statistics__item
        .statistics__image
            img( src="img/svg/" + svgName + ".svg" alt="" + svgName)
        span.statistics__num #{num}
        span.statistics__name #{name}

